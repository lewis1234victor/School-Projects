#include <stdio.h>
#include <stdlib.h>

long fact(int);

//The largest number that can be factored is 16!
int main()
{
    int x;
    long ans;
//Print statements/ Scanf
    printf("Please enter the number to be factored: ");
    scanf("%i", &x);
    printf("The number you would like factored is %i! \n", x);
    printf("The factorial answer is %i\n\n", fact(x));

    return 0;
}

//Function that does the Factorial.
long fact(int x) {

    long y;

   if (x == 1)          //Special occasion if the answer is already one it stays one.
   {
       return(1);
   }
   else
    {
     y = x * fact(x -1);            //Code for factorial.
        return y;
    }
}
